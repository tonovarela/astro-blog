---


import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import TypeBlogPost from "./components/TypeBlogPost.astro";

const blogPosts = await getCollection('blog',(post)=>post.data.isDraft===false);

	
---
<MainLayout title={siteConfig.title}>
<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto ">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">{siteConfig.description}</h1>

        <a href="/blog/1" class="mr-2 text-indigo-500">Paginado blog</a>
        <a href="/authors" class="mr-2 text-indigo-500">Autores</a>
        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
			{blogPosts.map((post)=><TypeBlogPost post={post}/>) }    
        </div>
    </div>
</section>
</MainLayout>


<style>
    a {
        @apply text-blue-500 
    }
</style>